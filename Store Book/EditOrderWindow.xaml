<Window x:Class="Store_Book.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="200" Width="440" ResizeMode="NoResize" 
        Background="{StaticResource PrimaryBrush}" 
        WindowStartupLocation="CenterScreen">
        
    <Grid Margin="20">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="Статус заказа:" Style="{StaticResource SectionTitleTextStyle}" 
                       FontSize="20" HorizontalAlignment="Left" FontWeight="Normal" Margin="0,0,0,0"/>

            <!-- Status ComboBox -->
            <ComboBox x:Name="StatusComboBox" Style="{StaticResource BaseComboBoxStyle}" 
                      Height="30" Margin="0,10,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Style="{StaticResource CancelButtonStyle}" 
                        Click="CancelButton_Click"/>
                <Button Content="Сохранить" Style="{StaticResource SaveButtonStyle}" 
                        Click="SaveButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>