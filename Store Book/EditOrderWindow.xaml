<Window x:Class="Store_Book.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="190" Width="400" ResizeMode="NoResize" 
        Background="#FF272727" FontFamily="Times New Roman">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Статус заказа:" FontWeight="Bold" Margin="0,0,0,5" FontSize="20" HorizontalAlignment="Left" Foreground="#FFE8E8E8"/>
            <ComboBox x:Name="StatusComboBox" Height="30" Margin="0,5,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Click="SaveButton_Click" Width="90" Height="30"
                        Background="#FF4A902C" BorderBrush="#FF3C3C3C" FontSize="14" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="90" Height="30"
                        Background="#FF6D6D6D" Foreground="White" BorderBrush="#FF3C3C3C" FontSize="14" HorizontalAlignment="Right" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>