<Window x:Class="Store_Book.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="400" Icon="/icon.png"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryBrush}">
            <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                <Image Source="/icon.png" Height="42" Width="50"/>
                <TextBlock Text="Book Store" Style="{StaticResource WindowTitleTextStyle}" 
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Login Form -->
        <Border Grid.Row="1" Margin="15,0,15,0" BorderThickness="2" CornerRadius="15" 
                BorderBrush="#DDDDDD" Background="{StaticResource CancelButtonBrush}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Username -->
                <StackPanel Grid.Row="0" Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Логин:" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,0"/>
                    <TextBox x:Name="LoginBox" Style="{StaticResource LargeTextBoxStyle}"/>
                </StackPanel>

                <!-- Password -->
                <StackPanel Grid.Row="1" Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Пароль:" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,0"/>
                    <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}"/>
                </StackPanel>

                <!-- Confirm Password -->
                <StackPanel Grid.Row="2" Style="{StaticResource FormStackPanelStyle}">
                    <Label Content="Проверка пароля:" Style="{StaticResource LabelTextStyle}" Margin="0,0,0,0"/>
                    <PasswordBox x:Name="PasswordBox2" Style="{StaticResource PasswordBoxStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="2" Background="{StaticResource PrimaryBrush}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ButtonLogin" Content="Войти" Style="{StaticResource ActionButtonStyle}"
                        Click="ButtonLogin_Click" Height="35"/>
                <Button x:Name="ButtonGuest" Content="Войти как гость" Style="{StaticResource ActionButtonStyle}"
                        Click="ButtonGuest_Click" Margin="10,0,0,0" Height="35"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>