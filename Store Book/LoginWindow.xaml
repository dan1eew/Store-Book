<Window x:Class="Store_Book.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store_Book"
        mc:Ignorable="d"  FontFamily="Times New Roman" Background="#FF272727" ResizeMode="NoResize"
        Height="500" Width="400" Icon="/icon.png">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="228*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0" Orientation="Horizontal">
                <Image Source="/icon.png" Height="42" Width="50" />
                <Label Content = "Book Store" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="#FFE8E8E8" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <Border Margin="15,0,15,0" Grid.RowSpan="1"
                BorderThickness="2" CornerRadius="15" Background="#FF3C3C3C" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="20,10,20,0">
                    <Label Content = "Логин:" HorizontalAlignment="Left"
                           FontSize="16" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name = "LoginBox" BorderBrush="#FF3C3C3C" Width="NaN" Margin="0,3,0,0" Height="30" VerticalContentAlignment="Center" FontSize="16" Background="#FFD8D8D8" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="20,10,20,0">
                    <Label Content = "Пароль:" HorizontalAlignment="Left"
                           FontSize="16" Foreground="#FFE8E8E8" Margin="0,6,0,0"/>
                    <PasswordBox x:Name = "PasswordBox" BorderBrush="#FF3C3C3C" Width="NaN" Margin="0,3,0,0" Height="30" VerticalContentAlignment="Center" FontSize="14" Background="#FFD8D8D8" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="2" VerticalAlignment="Center" Margin="20,10,20,0">
                    <Label Content = "Проверка пароля:" HorizontalAlignment="Left"
                           FontSize="16" Foreground="#FFE8E8E8"/>
                    <PasswordBox x:Name = "PasswordBox2" BorderBrush="#FF3C3C3C" Width="NaN" Margin="0,3,0,0" Height="30" VerticalContentAlignment="Center" FontSize="14" Background="#FFD8D8D8" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Click= "ButtonLogin_Click" Content = "Войти" 
                        HorizontalAlignment="Left" 
                        Margin="0,0,10,0" Height="34" Width="120" Background="#FF2C5B90" Foreground="#FFE8E8E8" 
                        BorderBrush="#FF3C3C3C" FontSize="14"/>

                <Button Click= "ButtonGuest_Click" Content = "Войти как гость"
                        HorizontalAlignment="Left" VerticalAlignment="Center" 
                        Margin="10,0,0,0" Height="34" Width="120" Background="#FF2C5B90" Foreground="#FFE8E8E8" 
                        BorderBrush="#FF3C3C3C" FontSize="14"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
