<Window x:Class="Store_Book.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказы" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" 
        Background="#FF272727" FontFamily="Times New Roman">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Список заказов" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Left" Foreground="#FFE8E8E8"/>
        
        <!-- Панель фильтров и сортировки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- Фильтр по статусу -->
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="180">
                <TextBlock Text="Фильтр по статусу:" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left" Height="24"/>
                <ComboBox x:Name="StatusFilterCombo" SelectionChanged="StatusFilterCombo_SelectionChanged" Margin="0,3,0,0" FontSize="14" Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            </StackPanel>
            
            <!-- Сортировка -->
            <StackPanel Orientation="Vertical" Margin="5,0,10,0">
                <TextBlock Text="Сортировка:" Foreground="#FFE8E8E8" FontSize="16" Height="24" Width="180" HorizontalAlignment="Left"/>
                <ComboBox x:Name="SortComboBox" SelectionChanged="SortComboBox_SelectionChanged" FontSize="14" VerticalAlignment="Center" Margin="0,3,0,0" Height="25" VerticalContentAlignment="Center">
                    <ComboBoxItem Content="По номеру (↑)" Tag="OrderNumberAsc"/>
                    <ComboBoxItem Content="По номеру (↓)" Tag="OrderNumberDesc"/>
                    <ComboBoxItem Content="По дате (↑)" Tag="OrderDateAsc"/>
                    <ComboBoxItem Content="По дате (↓)" Tag="OrderDateDesc"/>
                    <ComboBoxItem Content="По сумме (↑)" Tag="TotalPriceAsc"/>
                    <ComboBoxItem Content="По сумме (↓)" Tag="TotalPriceDesc"/>
                </ComboBox>
            </StackPanel>
            
            <!-- Поиск -->
            <StackPanel Orientation="Vertical" Margin="5,0,10,0" Width="220">
                <TextBlock Text="Поиск:" Foreground="#FFE8E8E8" FontSize="16" Height="24" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBox x:Name="SearchTextBox"
                         BorderBrush="#FF3C3C3C" Width="NaN" Margin="0,3,0,0" Height="25" VerticalContentAlignment="Center" FontSize="14" Background="#FFD8D8D8" TextChanged="SearchTextBox_TextChanged"
                         ToolTip="Поиск по клиенту, коду заказа" VerticalAlignment="Center"/>
            </StackPanel>
            
            <!-- Кнопки для администратора -->
            <Button x:Name="EditButton" Content="Изменить статус" Click="EditButton_Click" 
                   Width="120" Height="30" Margin="0,20,10,0" VerticalAlignment="Bottom" Visibility="Collapsed"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" 
                   Width="100" Height="30" Margin="0,20,10,0" VerticalAlignment="Bottom" Visibility="Collapsed"/>
        </StackPanel>
        
        <DataGrid Grid.Row="2" x:Name="OrdersGrid" AutoGenerateColumns="False" 
                 CanUserAddRows="False" SelectionMode="Single" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding OrderNumber}" Width="80"/>
                <DataGridTextColumn Header="Код" Binding="{Binding OrderCode}" Width="80"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Дата доставки" Binding="{Binding DeliveryDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding FullNameCustomer}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding OrderStatus}" Width="100"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat={}{0}₽}" Width="100"/>
                <DataGridTextColumn Header="Пункт выдачи" Binding="{Binding PickUpAddress}" Width="200"/>
                <DataGridTextColumn Header="Книга" Binding="{Binding BookTitle}" Width="200"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60"/>
                <DataGridTextColumn Header="Код получения" Binding="{Binding CodeToReceive}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="3" Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Закрыть" Click="CloseButton_Click"
                    Height="35" Width="120" Background="#FF2C5B90" Foreground="#FFE8E8E8" BorderBrush="#FF3C3C3C" 
                    FontSize="14" Padding="0,0,0,0" Margin="0,0,10,0"/>
            <Button x:Name="RefreshButton" Content="Обновить" Click="RefreshButton_Click" 
                    Margin="10,0,0,0" Height="35" Width="120" 
                    Background="#FF2C5B90" Foreground="#FFE8E8E8" BorderBrush="#FF3C3C3C" />
        </StackPanel>
    </Grid>
</Window>