<Window x:Class="Store_Book.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказы" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBrush}" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Список заказов" Style="{StaticResource WindowTitleTextStyle}" 
                   HorizontalAlignment="Left" Margin="0,0,0,15"/>

        <!-- Filters Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- Status Filter -->
            <StackPanel Orientation="Vertical" Margin="0,0,10,0" Width="250">
                <TextBlock Text="Фильтр по статусу:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" FontSize="14"/>
                <ComboBox x:Name="StatusFilterCombo" Style="{StaticResource BaseComboBoxStyle}"
                          SelectionChanged="StatusFilterCombo_SelectionChanged" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Sort -->
            <StackPanel Orientation="Vertical" Margin="5,0,10,0" Width="250">
                <TextBlock Text="Сортировка:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" FontSize="14"/>
                <ComboBox x:Name="SortComboBox" Style="{StaticResource BaseComboBoxStyle}"
                          SelectionChanged="SortComboBox_SelectionChanged" Margin="0,5,0,0">
                    <ComboBoxItem Content="По номеру (↑)" Tag="OrderNumberAsc"/>
                    <ComboBoxItem Content="По номеру (↓)" Tag="OrderNumberDesc"/>
                    <ComboBoxItem Content="По дате (↑)" Tag="OrderDateAsc"/>
                    <ComboBoxItem Content="По дате (↓)" Tag="OrderDateDesc"/>
                    <ComboBoxItem Content="По сумме (↑)" Tag="TotalPriceAsc"/>
                    <ComboBoxItem Content="По сумме (↓)" Tag="TotalPriceDesc"/>
                </ComboBox>
            </StackPanel>

            <!-- Search -->
            <StackPanel Orientation="Vertical" Margin="5,0,10,0" Width="300">
                <TextBlock Text="Поиск:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" FontSize="14"/>
                <TextBox x:Name="SearchTextBox" Style="{StaticResource BaseTextBoxStyle}" Width="NaN"
                         TextChanged="SearchTextBox_TextChanged"
                         ToolTip="Поиск по клиенту, коду заказа" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Orders Grid -->
        <DataGrid Grid.Row="2" x:Name="OrdersGrid" Style="{StaticResource BaseDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding OrderNumber}" Width="80"/>
                <DataGridTextColumn Header="Код" Binding="{Binding OrderCode}" Width="80"/>
                <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Дата доставки" Binding="{Binding DeliveryDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding FullNameCustomer}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding OrderStatus}" Width="100"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat={}{0}₽}" Width="100"/>
                <DataGridTextColumn Header="Пункт выдачи" Binding="{Binding PickUpAddress}" Width="200"/>
                <DataGridTextColumn Header="Книга" Binding="{Binding BookTitle}" Width="200"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60"/>
                <DataGridTextColumn Header="Код получения" Binding="{Binding CodeToReceive}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Закрыть" Style="{StaticResource CancelButtonStyle}" Height="35" Width="120"
                    Click="CloseButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="RefreshButton" Content="Обновить" Style="{StaticResource ActionButtonStyle}"
                    Height="35" Width="120" Click="RefreshButton_Click" Padding="10,0,29,0"/>
            <!-- Admin Buttons -->
            <Button x:Name="EditButton" Content="Изменить статус" Style="{StaticResource ActionButtonStyle}"
                    VerticalAlignment="Bottom"
                    Click="EditButton_Click" Height="35" Margin="10,0,0,0"/>
            <Button x:Name="DeleteButton" Content="Удалить" Style="{StaticResource DeleteButtonStyle}"
                    VerticalAlignment="Bottom"
                    Click="DeleteButton_Click" Height="35" Margin="10,0,0,0" Width="120"/>
        </StackPanel>
    </Grid>
</Window>