<Window x:Class="Store_Book.AddEditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store_Book"
        mc:Ignorable="d" Height="650" Width="500"
        WindowStartupLocation="CenterOwner" Icon="/icon.png"
        ResizeMode="NoResize" Background="{StaticResource PrimaryBrush}" 
        FontFamily="Times New Roman">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Редактирование / Добавление товара" 
               FontSize="20" FontWeight="Bold" 
               Foreground="#FFE8E8E8" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- Поля формы -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Фото товара -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <Border BorderThickness="1" 
                        Background="#FF272727" Width="150" Height="100"
                        HorizontalAlignment="Left">
                        <Image x:Name="ProductImage" 
                           Stretch="Uniform" Source="/picture.png" Width="110" Height="82" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Button x:Name="ButtonSelectImage" Content="Выбрать изображение" 
                        Click="ButtonSelectImage_Click"
                        Width="150" Height="30" Margin="0,5,0,0"
                        Background="#FF2C5B90" Foreground="White" HorizontalAlignment="Left" FontSize="14" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Артикул -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Артикул:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="TextBoxArticle" Height="30" Padding="5"
                         ToolTip="Уникальный артикул товара" FontSize="16" HorizontalAlignment="Left" VerticalContentAlignment="Center" Width="420" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Наименование -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Наименование товара:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="TextBoxName" Height="30" Padding="5" FontSize="16" Width="420" HorizontalAlignment="Left" VerticalContentAlignment="Center" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Категория -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Категория:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="ComboBoxCategory" Height="30" Width="420" HorizontalAlignment="Left" VerticalContentAlignment="Center" BorderBrush="#FF3C3C3C" FontSize="16">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="#FFD8D8D8"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                    </ComboBox>
                </StackPanel>

                <!-- Описание -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Описание товара:" Margin="0,0,0,5" Foreground="#FFE8E8E8" HorizontalAlignment="Left" FontSize="14"/>
                    <TextBox x:Name="TextBoxDescription" Height="60" Padding="5" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto" FontSize="16" Width="420" HorizontalAlignment="Left" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Производитель -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Производитель:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="ComboBoxProducer" Height="30" FontSize="16" Width="420" HorizontalAlignment="Left" VerticalContentAlignment="Center" BorderBrush="#FF3C3C3C" Background="#FFD8D8D8"/>
                </StackPanel>

                <!-- Поставщик -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Поставщик:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="TextBoxSupplier" Height="30" Padding="5" FontSize="14" Width="420" HorizontalAlignment="Left" VerticalContentAlignment="Center" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Цена -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Цена:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="TextBoxPrice" Height="30" Padding="5"
                         ToolTip="Цена должна быть положительной" FontSize="16" HorizontalAlignment="Left" Width="420" VerticalContentAlignment="Center" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Единица измерения -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Единица измерения:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="TextBoxUnit" Height="30" Padding="5,5,5,5" 
                         Text="шт." Width="420" HorizontalAlignment="Left" VerticalContentAlignment="Center" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C" FontSize="16"/>
                </StackPanel>

                <!-- Количество на складе -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Количество на складе:" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
                    <TextBox x:Name="TextBoxQuantity" Height="30" Padding="5,7,5,5" 
                         Text="0"
                         ToolTip="Количество не может быть отрицательным" FontSize="16" Width="420" HorizontalAlignment="Left" VerticalContentAlignment="Center" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Скидка -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                    <TextBlock Text="Действующая скидка (%):" Margin="0,0,0,5" Foreground="#FFE8E8E8" FontSize="16"/>
                    <TextBox x:Name="TextBoxDiscount" Height="30" Padding="5" 
                         Text="0"
                         ToolTip="Скидка в процентах (0-100)" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="420" Background="#FFD8D8D8" BorderBrush="#FF3C3C3C"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="ButtonCancel" Content="Отмена" Click="ButtonCancel_Click"
                    Style="{StaticResource CancelButtonStyle}" Margin="0,0,10,0"/>
            <Button x:Name="ButtonDelete" Content="Удалить" Click="DeleteButton_Click"
                    Style="{StaticResource DeleteButtonStyle}" Margin="0,0,10,0"/>
            <Button x:Name="ButtonSave" Content="Сохранить" Click="ButtonSave_Click"
                    Style="{StaticResource SaveButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
