<Page x:Class="Store_Book.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Store_Book" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="BookPage">

    <Page.Resources>
        <local:QuantityToColorConverter x:Key="QuantityToColorConverter"/>
        <local:DiscountToBackgroundConverter x:Key="DiscountToBackgroundConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска и фильтров -->
        <Border Grid.Row="1" 
                BorderBrush="#DDDDDD" 
                BorderThickness="0,1,0,1" 
                Padding="10"
                Visibility="{Binding SearchPanelVisibility}">
            <StackPanel Orientation="Horizontal" Height="25">
                <!-- Поиск -->
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <TextBox x:Name="TextBoxSearch" 
                             Width="250" 
                             TextChanged="TextBoxSearch_TextChanged"
                             ToolTip="Поиск по названию, категории, описанию, производителю" Height="25" BorderBrush="#FF3C3C3C" Background="#FFD8D8D8" VerticalContentAlignment="Center" FontSize="14" FontFamily="Times New Roman"/>
                </StackPanel>

                <!-- Фильтр по поставщику -->
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <ComboBox x:Name="ComboBoxSupplier" 
                              Width="180" 
                              Height="25"
                              SelectionChanged="ComboBoxSupplier_SelectionChanged" FontSize="14" FontFamily="Times New Roman" VerticalAlignment="Center" BorderBrush="#FF3C3C3C"/>
                </StackPanel>

                <!-- Сортировка -->
                <StackPanel Orientation="Vertical">
                    <Button x:Name="ButtonSort" 
                            Content="По количеству ▲" 
                            Click="ButtonSort_Click" 
                            Width="150" 
                            Height="25"
                            Background="#FF2C5B90" 
                            Foreground="#FFE8E8E8" BorderBrush="#FF3C3C3C" FontSize="14" FontFamily="Times New Roman"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Список товаров -->
        <ListView Grid.Row="2" 
                  x:Name="ListViewProducts" 
                  Margin="10"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                  Background="White" 
                  FontFamily="Times New Roman" 
                  FontSize="14">
            <ListView.View>
                <GridView>
                    <!-- Фото -->
                    <GridViewColumn Header="Фото" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" 
                                        BorderThickness="1" 
                                        Background="White" 
                                        Width="80" 
                                        Height="60"
                                        CornerRadius="3"
                                        HorizontalAlignment="Center">
                                    <Image Source="{Binding ProductImage}" 
                                           Stretch="Uniform" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           SnapsToDevicePixels="True"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Артикул -->
                    <GridViewColumn Header="Артикул" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Code}" 
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Название книги -->
                    <GridViewColumn Header="Название книги" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProductName}" 
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Категория -->
                    <GridViewColumn Header="Категория" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Производитель -->
                    <GridViewColumn Header="Производитель" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Producer}" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Цена -->
                    <GridViewColumn Header="Цена" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PriceDisplay}" 
                                               FontWeight="Bold" HorizontalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{Binding PriceColor}" TextDecorations="{Binding PriceDecoration}"/>
                                    <TextBlock Text="{Binding FinalPrice, StringFormat={}{0}₽}" 
                                               FontSize="12" FontWeight="Bold"
                                               Foreground="DarkGreen" 
                                               Visibility="{Binding DiscountVisibility}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Скидка -->
                    <GridViewColumn Header="Скидка" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding CurrentDiscount, Converter={StaticResource DiscountToBackgroundConverter}}"
                                        CornerRadius="10"
                                        Padding="5,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentDiscount, StringFormat={}{0}%}" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="White" FontSize="12"
                                               FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Количество -->
                    <GridViewColumn Header="Количество" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding QuantityInStock}" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" FontSize="12"
                                           FontWeight="Bold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Описание -->
                    <GridViewColumn Header="Описание" Width="380">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" 
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           Foreground="#666666" 
                                           FontFamily="Times New Roman"
                                           TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="{Binding RowColor}"/>
                    <Setter Property="BorderBrush" Value="#EEEEEE"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="MinHeight" Value="70"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE8F4FF"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFD1EFFF"/>
                            <Setter Property="BorderBrush" Value="#FF0078D7"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Сообщение при отсутствии товаров -->
        <TextBlock Grid.Row="2" 
                   x:Name="TextBlockNoProducts" 
                   Text="Товары не найдены" 
                   FontSize="16" 
                   Foreground="Gray" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Page>