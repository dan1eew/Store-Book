<Page x:Class="Store_Book.BookPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Store_Book"
      Title="BookPage">

    <Page.Resources>
        <local:QuantityToColorConverter x:Key="QuantityToColorConverter"/>
        <local:DiscountToBackgroundConverter x:Key="DiscountToBackgroundConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Search and Filters Panel -->
        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="0,1,0,1" Padding="10"
                Visibility="{Binding SearchPanelVisibility}">
            <StackPanel Orientation="Horizontal" Height="25">
                <!-- Search -->
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <TextBox x:Name="TextBoxSearch" Style="{StaticResource BaseTextBoxStyle}" Width="250"
                             TextChanged="TextBoxSearch_TextChanged"
                             ToolTip="Поиск по названию, категории, описанию, производителю" Margin="0,0,0,0"/>
                </StackPanel>

                <!-- Supplier Filter -->
                <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                    <ComboBox x:Name="ComboBoxSupplier" Style="{StaticResource BaseComboBoxStyle}" Width="180"
                              SelectionChanged="ComboBoxSupplier_SelectionChanged" Margin="0,0,0,0"/>
                </StackPanel>

                <!-- Sort Button -->
                <StackPanel Orientation="Vertical">
                    <Button x:Name="ButtonSort" Content="По количеству ▲" 
                            Style="{StaticResource ActionButtonStyle}" Width="150" Height="25"
                            Click="ButtonSort_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Products List -->
        <ListView Grid.Row="2" x:Name="ListViewProducts" Margin="10"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                  Background="White" FontFamily="Times New Roman" FontSize="14">
            <ListView.View>
                <GridView>
                    <!-- Photo -->
                    <GridViewColumn Header="Фото" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" 
                                        Background="White" Width="80" Height="60"
                                        CornerRadius="3" HorizontalAlignment="Center">
                                    <Image Source="{Binding ProductImage}" Stretch="Uniform" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           SnapsToDevicePixels="True"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Code -->
                    <GridViewColumn Header="Артикул" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Code}" FontWeight="SemiBold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Name -->
                    <GridViewColumn Header="Название книги" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProductName}" TextWrapping="Wrap"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Category -->
                    <GridViewColumn Header="Категория" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Category}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Producer -->
                    <GridViewColumn Header="Производитель" Width="130">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Producer}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Price -->
                    <GridViewColumn Header="Цена" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding PriceDisplay}" FontWeight="Bold"
                                               HorizontalAlignment="Center" FontSize="12"
                                               Foreground="{Binding PriceColor}" 
                                               TextDecorations="{Binding PriceDecoration}"/>
                                    <TextBlock Text="{Binding FinalPrice, StringFormat={}{0}₽}" 
                                               FontSize="12" FontWeight="Bold" Foreground="DarkGreen" 
                                               Visibility="{Binding DiscountVisibility}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Discount -->
                    <GridViewColumn Header="Скидка" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding CurrentDiscount, Converter={StaticResource DiscountToBackgroundConverter}}"
                                        CornerRadius="10" Padding="5,2"
                                        HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CurrentDiscount, StringFormat={}{0}%}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Foreground="White" FontSize="12" FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Quantity -->
                    <GridViewColumn Header="Количество" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding QuantityInStock}" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                                           FontSize="12" FontWeight="Bold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!-- Description -->
                    <GridViewColumn Header="Описание" Width="380">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           FontSize="14" Foreground="#666666" 
                                           FontFamily="Times New Roman" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="{Binding RowColor}"/>
                    <Setter Property="BorderBrush" Value="#EEEEEE"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="MinHeight" Value="70"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE8F4FF"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFD1EFFF"/>
                            <Setter Property="BorderBrush" Value="#FF0078D7"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- No Products Message -->
        <TextBlock Grid.Row="2" x:Name="TextBlockNoProducts" Text="Товары не найдены" 
                   FontSize="16" Foreground="Gray" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Visibility="Collapsed"/>
    </Grid>
</Page>