<Window x:Class="Store_Book.MakeOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="484" Width="600"
        Background="{StaticResource PrimaryBrush}" 
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="41.443"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Оформление заказа" Style="{StaticResource SectionTitleTextStyle}" HorizontalAlignment="Left" FontSize="24" Width="214"/>

        <!-- Book Selection -->
        <StackPanel Grid.Row="1" Style="{StaticResource FormStackPanelStyle}" Margin="0,0,0,15" Orientation="Horizontal">
            <TextBlock Text="Выберите книгу:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <ComboBox x:Name="BooksComboBox" Style="{StaticResource BaseComboBoxStyle}" Height="30"
                     DisplayMemberPath="ProductName" SelectedValuePath="BookID"
                     SelectionChanged="BooksComboBox_SelectionChanged" Margin="20,0,0,0" Width="445" HorizontalAlignment="Right" FontSize="13"/>
        </StackPanel>

        <!-- Book Info -->
        <Border Grid.Row="2" BorderBrush="#DDDDDD" Background="{StaticResource CancelButtonBrush}"
                CornerRadius="15" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Информация о книге:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Артикул:" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                        <TextBlock Text="Цена:" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                        <TextBlock Text="Скидка:" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                        <TextBlock Text="В наличии:" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="BookCodeText" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BookPriceText" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BookDiscountText" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                        <TextBlock x:Name="BookStockText" Style="{StaticResource RegularTextStyle}" Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Quantity -->
        <StackPanel Grid.Row="3" Style="{StaticResource FormStackPanelStyle}" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Количество:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="QuantityTextBox" Text="1" Style="{StaticResource BaseTextBoxStyle}" Width="100"
                     TextChanged="QuantityTextBox_TextChanged" Margin="51,0,0,0"/>
        </StackPanel>

        <!-- Pickup Point -->
        <StackPanel Grid.Row="4" Style="{StaticResource FormStackPanelStyle}" Margin="0,0,0,15" Orientation="Horizontal">
            <TextBlock Text="Пункт выдачи:" Style="{StaticResource RegularTextStyle}" VerticalAlignment="Center"/>
            <ComboBox x:Name="PickUpComboBox" Style="{StaticResource BaseComboBoxStyle}" Height="30"
                     DisplayMemberPath="FullAddress" SelectedValuePath="PickUpPointID" Margin="34,0,0,0" Width="445" HorizontalAlignment="Right" FontSize="13"/>
        </StackPanel>

        <!-- Total Price -->
        <Border Grid.Row="5" BorderBrush="#DDDDDD" Background="{StaticResource CancelButtonBrush}"
                CornerRadius="15" BorderThickness="1" Padding="10,10,10,10" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Общая сумма:" Style="{StaticResource RegularTextStyle}" HorizontalAlignment="Left" FontSize="16"/>
                <TextBlock x:Name="TotalPriceText" Style="{StaticResource RegularTextStyle}" FontSize="16" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="Отмена" Style="{StaticResource CancelButtonStyle}" Width="120" Height="35"
                   Click="CancelButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="ConfirmButton" Content="Подтвердить заказ" 
                   Style="{StaticResource SaveButtonStyle}" Width="150" Height="35"
                   Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>