<Window x:Class="Store_Book.MakeOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление заказа" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
   
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Оформление заказа" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Выбор книги -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Выберите книгу:" FontWeight="Bold"/>
            <ComboBox x:Name="BooksComboBox" DisplayMemberPath="ProductName" 
                     SelectedValuePath="BookID" Height="30" SelectionChanged="BooksComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Информация о выбранной книге -->
        <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Информация о книге:" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Артикул:" FontWeight="SemiBold"/>
                        <TextBlock Text="Цена:" FontWeight="SemiBold"/>
                        <TextBlock Text="Скидка:" FontWeight="SemiBold"/>
                        <TextBlock Text="В наличии:" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="BookCodeText"/>
                        <TextBlock x:Name="BookPriceText"/>
                        <TextBlock x:Name="BookDiscountText"/>
                        <TextBlock x:Name="BookStockText"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Количество -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Количество:" FontWeight="Bold"/>
            <TextBox x:Name="QuantityTextBox" Text="1" Width="100" TextChanged="QuantityTextBox_TextChanged"/>
        </StackPanel>

        <!-- Пункт выдачи -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Пункт выдачи:" FontWeight="Bold"/>
            <ComboBox x:Name="PickUpComboBox" DisplayMemberPath="FullAddress" 
                     SelectedValuePath="PickUpPointID" Height="30"/>
        </StackPanel>

        <!-- Общая сумма -->
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Общая сумма:" FontWeight="Bold"/>
            <TextBlock x:Name="TotalPriceText" FontSize="16" FontWeight="Bold" Foreground="Green"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ConfirmButton" Content="Подтвердить заказ" 
                   Click="ConfirmButton_Click" Height="40" Width="150" Background="Green" 
                   Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Height="40" Width="100"
                   Background="Gray" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>