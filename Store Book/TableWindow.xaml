<Window x:Class="Store_Book.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store_Book"
        mc:Ignorable="d" Icon="/icon.png"
        Height="700" Width="1200" WindowStartupLocation="CenterScreen" 
        Background="#FF444444" FontFamily="Times New Roman">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF272727" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Image Source="/icon.png" VerticalAlignment="Top" Height="42" Width="50" />
                    <Label Content = "Book Store" HorizontalAlignment="Left" FontSize="22" FontWeight="Bold" Foreground="#FFE8E8E8" Padding="5,7,5,5"/>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="TextBlockUserInfo" FontSize="14" 
                          Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>

                <Button Grid.Column="2" x:Name="ButtonLogout" Content="Выйти" Click="ButtonLogout_Click"
                        Width="90" Height="30" Background="#FF902C2C" Foreground="White" FontSize="14"/>
            </Grid>
        </Border>

        <!-- Navigation Buttons -->

        <StackPanel Grid.Row="1" Background="#FF272727" Height="50" Orientation="Horizontal">
            <Button x:Name="ButtonProducts" Content="Товары" Click="ButtonProducts_Click" 
                    Margin="10,5,0,5" Width="120" Background="#FF2C5B90" Foreground="White" BorderBrush="{x:Null}" FontSize="14" Height="31"/>
            <Button x:Name="ButtonOrders" Content="Заказы" Click="ButtonOrders_Click" 
                    Margin="10,5,0,5" Width="120" Background="#FF2C5B90" Foreground="White"
                    Visibility="{Binding IsManagerOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}" BorderBrush="{x:Null}" FontSize="14" Height="30"/>
            <Button x:Name="ButtonAddProduct" Content="Добавить товар" Click="ButtonAddProduct_Click"
                    Margin="10,5,0,5" Width="120" Background="#FF2C5B90" Foreground="White"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}" BorderBrush="{x:Null}" FontSize="14" Height="30"/>
            <Button  x:Name="ButtonMakeOrder" Content="Оформить заказ" Click="ButtonMakeOrder_Click"
                    Margin="10,5,0,5" Width="120" Background="#FF2C5B90" Foreground="White"
                    Visibility="{Binding IsClien, Converter={StaticResource BooleanToVisibilityConverter}}" BorderBrush="{x:Null}" FontSize="14" Height="30"/>
        
        </StackPanel>
        <!-- Content Frame -->
        <Frame Grid.Row="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
