<Window x:Class="Store_Book.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="1200" WindowStartupLocation="CenterScreen" 
        Icon="/icon.png">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/icon.png" Height="42" Width="50"/>
                    <TextBlock Text="Book Store" Style="{StaticResource WindowTitleTextStyle}" 
                               Margin="10,0,0,0"/>
                </StackPanel>

                <!-- User Info -->
                <TextBlock Grid.Column="1" x:Name="TextBlockUserInfo" Style="{StaticResource RegularTextStyle}"
                          VerticalAlignment="Center" Margin="0,0,20,0"/>

                <!-- Logout Button -->
                <Button Grid.Column="2" x:Name="ButtonLogout" Content="Выйти" Click="ButtonLogout_Click"
                        Style="{StaticResource DeleteButtonStyle}" Width="120" Height="35"/>
            </Grid>
        </Border>

        <!-- Navigation -->
        <StackPanel Grid.Row="1" Background="{StaticResource PrimaryBrush}" 
                    Height="50" Orientation="Horizontal">
            <Button x:Name="ButtonProducts" Content="Товары" Click="ButtonProducts_Click" 
                    Style="{StaticResource NavButtonStyle}" Height="35"/>
            <Button x:Name="ButtonOrders" Content="Заказы" Click="ButtonOrders_Click" 
                    Style="{StaticResource NavButtonStyle}"
                    Visibility="{Binding IsManagerOrAdmin, Converter={StaticResource BooleanToVisibilityConverter}}" Height="35"/>
            <Button x:Name="ButtonAddProduct" Content="Добавить товар" Click="ButtonAddProduct_Click"
                    Style="{StaticResource NavButtonStyle}"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}" Height="35"/>
            <Button x:Name="ButtonMakeOrder" Content="Оформить заказ" Click="ButtonMakeOrder_Click"
                    Style="{StaticResource NavButtonStyle}"
                    Visibility="{Binding IsClien, Converter={StaticResource BooleanToVisibilityConverter}}" Height="35"/>
        </StackPanel>

        <!-- Content -->
        <Frame Grid.Row="2" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>